    "version": "0.2.0",
    "configurations": [

        {
            "name": "integrity - show info",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "cmd/integrity/integrity.go",
            "args": [
                "--loglevel", "debug",
                "--info"
            ]
        },
        {
            "name": "integrity - list all digests",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "cmd/integrity/integrity.go",
            "args": [
                "--loglevel", "debug",
                "-lx", "../../data.dat"
            ]
        },
        {
            "name": "integrity - check digest",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "cmd/integrity/integrity.go",
            "args": [
                "--loglevel", "debug",
                "-c", "../../data.dat"
            ]
        },
        {
            "name": "integrity - add digest",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "cmd/integrity/integrity.go",
            "args": [
                "--loglevel", "debug",
                "--digest" , "sha1,md5,sha256",
                "-af", "../../data.dat"
            ]
        },
        {
            "name": "integrity - list md5sum",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "cmd/integrity/integrity.go",
            "args": [
                "--loglevel", "debug",
                "--display-format", "md5sum",
                "../../data.dat"
            ]
        },
    ]
}